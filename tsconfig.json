{
    "compilerOptions": {
      "target": "es5",
      "outDir": "dist",
      "declarationDir": "./dist",
      "lib": [
        "es6", "dom", "es2016", "es2017"
      ],
      "declaration": true,
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "sourceMap": true,
      "jsx": "react-jsx"
    },
    "include": [
      "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.stories.tsx",
    ]
  }